<!-- Decision diamond with Yes/No branches -->
<?xml version="1.0" encoding="UTF-8"?>
<mxfile host="Electron">
  <diagram name="Decision Flow" id="decision-tpl">
    <mxGraphModel dx="1200" dy="800" grid="1" gridSize="10" guides="1" tooltips="1" connect="1" arrows="1" fold="1" page="0" pageScale="1" pageWidth="850" pageHeight="1100" math="0" shadow="0" defaultFontFamily="Arial">
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>

        <!-- EDGES FIRST -->
        <mxCell id="e1" edge="1" source="start" target="check" parent="1" style="edgeStyle=orthogonalEdgeStyle;fontFamily=Arial;fontSize=16;strokeColor=#4a5568;">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <mxCell id="e_yes" edge="1" source="check" target="success" parent="1" value="Yes" style="edgeStyle=orthogonalEdgeStyle;fontFamily=Arial;fontSize=16;strokeColor=#4a5568;fontColor=#e2e8f0;labelBackgroundColor=#2d3748;exitX=1;exitY=0.5;exitDx=0;exitDy=0;">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <mxCell id="e_no" edge="1" source="check" target="failure" parent="1" value="No" style="edgeStyle=orthogonalEdgeStyle;fontFamily=Arial;fontSize=16;strokeColor=#4a5568;fontColor=#e2e8f0;labelBackgroundColor=#2d3748;exitX=0;exitY=0.5;exitDx=0;exitDy=0;">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <!-- VERTICES -->
        <mxCell id="start" vertex="1" parent="1" value="Start" style="ellipse;fillColor=#2d3748;strokeColor=#4a5568;fontColor=#e2e8f0;fontFamily=Arial;fontSize=16;">
          <mxGeometry x="200" y="60" width="160" height="44" as="geometry"/>
        </mxCell>

        <mxCell id="check" vertex="1" parent="1" value="Condition?" style="rhombus;fillColor=#744210;strokeColor=#92400e;fontColor=#fef3c7;fontFamily=Arial;fontSize=16;whiteSpace=wrap;">
          <mxGeometry x="170" y="164" width="220" height="80" as="geometry"/>
        </mxCell>

        <mxCell id="success" vertex="1" parent="1" value="Yes Path" style="rounded=1;fillColor=#1a365d;strokeColor=#2b6cb0;fontColor=#bee3f8;fontFamily=Arial;fontSize=16;">
          <mxGeometry x="440" y="182" width="160" height="44" as="geometry"/>
        </mxCell>

        <mxCell id="failure" vertex="1" parent="1" value="No Path" style="rounded=1;fillColor=#1a365d;strokeColor=#2b6cb0;fontColor=#bee3f8;fontFamily=Arial;fontSize=16;">
          <mxGeometry x="-40" y="182" width="160" height="44" as="geometry"/>
        </mxCell>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
